---
import site from "../data/site.json";
import SkillItem from './SkillItem.astro';
const title = `Mes 2 années d'études m'ont appris a découvrir différents langages`;
const comfortable = `Ceux avec lesquels j'ai désormais un bon niveau de maitrise`;
const mastering = `Ceux que je suis entrain d'apprendre`;
const {Compétences} = site;
---
<section id="Compétences">
    <h2>{title}</h2>
    
    <strong>{comfortable}</strong>
    <br />
    <div class="Compétences">
        {Compétences.comfortable.map((item) => (
            <SkillItem item={item} />
        ))}
    </div>

    <strong>{mastering}</strong>
    <br />
    <div class="Compétences">
        {Compétences.mastering.map((item) => (
            <SkillItem item={item} />
        ))}
    </div>
</section>
<style lang="scss">
.Compétences {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    margin: 1rem 0;
    @media (min-width: 700px) {
            grid-template-columns: repeat(12, 1fr);
    }
    @media (min-width: 600px) {
        grid-template-columns: repeat(8, 1fr);
    }
}
</style>