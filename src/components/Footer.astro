---
import site from "../data/site.json";
const title = `Contactez-moi !`;
const {socials, author, profile_pic, resume} = site;
---
<footer id="footer">
    <div class="footer-left">
        <h2>{title}</h2>
        <p>
            <i>Vous pouvez également télécharger mon <a class="link" href={resume} target="_blank">CV</a> et me retrouver sur mes différents réseaux.</i></p>
            <div class="socials">
            {socials.map((social) => (
                <div class="social-icon tooltip-container">
                    <span class="tooltip">{social.title}</span>
                    <a href={social.link} target="blank">
                        <i class={`devicon-${social.icon}-plain`}></i>
                    </a>
                </div>
            ))}
        </div>
    </div>
    <div class="footer-right">
        <img width="500" height="500" src={profile_pic} alt={author} />
    </div>
</footer>
<style lang="scss">
footer {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 100px;
    h2 {
        margin-top: 0;
    }
    .footer-right {
        padding: 10px;
        margin: 5px;
        margin-left: 3rem;
        max-width: 300px;
    }
    .social-icon {
        background: #fff;
        padding: 10px;
        margin: 5px;
        border-radius: 5px;
        display: inline-block;
            a {
                display: flex;
                justify-content: center;
                align-items: center;
                text-decoration: none;
            i {
                width: 24px;
                height: 24px;
                font-size: 1.5rem;
            }
        }
    }
    img {
        border-radius: 50%;
        border: 5px solid #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }
}
</style>